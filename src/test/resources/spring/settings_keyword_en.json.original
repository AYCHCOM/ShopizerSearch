 {
 	"analysis": {
 		"filter": {
 			"nGram_filter": {
 				"type": "nGram",
 				"token_chars": [
 					"letter",
 					"digit",
 					"punctuation",
 					"symbol"
 				]
 			},
 			"filter": {
                "language_stop": {
                    "type":       "stop",
                    "stopwords":  "_english_"
                }
            }
 		},
 		"analyzer": {
 			"nGram_analyzer": {
 				"type": "custom",
 				"tokenizer": "whitespace",
 				"filter": [
 					"lowercase",
 					"asciifolding",
 					"nGram_filter"
 				]
 			},
 			"whitespace_analyzer": {
 				"type": "custom",
 				"tokenizer": "whitespace",
 				"filter": [
 					"lowercase",
 					"asciifolding"
 				]
 			},
 			"rebuilt_stop": {
          		"tokenizer": "lowercase",
          		"filter": [
            		"language_stop"          
          		]
        	}
 		},
 		"tokenizer": {
 				"edge_ngram_tokenizer": {
 					"type": "edge_ngram",
 					"min_gram": 1,
            		"max_gram": 25,
 					"token_chars": [
 						"letter"
 					]
 				}
 			}
 	}
 }